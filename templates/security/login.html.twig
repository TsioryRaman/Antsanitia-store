{% extends 'base.html.twig' %}

{% block title %}Login | admin{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="flow-text center-align">Antsanitia admin panel</h1>
        <div class="row">
            <div class="col s12 m6 l6 center offset-l3 offset-m3">
                <form action="" method="POST">
                    <div class="input-field">
                        <i class="material-icons prefix">account_circle</i>
                        <label for="username">Username</label>
                        <input type="text" id="autocomplete-input" class="autocomplete" id="username" value="{{ lastUsername }}" name="_username">
                        <span class="helper-text red-text" data-error="wrong" data-success="right">
                        {% if error %}
                            {{ error.messageKey }}
                        {% endif %}
                        </span>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <label for="username">Mot de passe</label>
                        <input type="password" id="autocomplete-input" class="autocomplete" id="password" name="_password">
                    </div>
                    <div class="input-field center">
                        <button type="submit" class="btn">Se connecter</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script>
            $(document).ready(()=>{
                $("input.autocomplete").autocomplete();
            })
        </script>
    {% endblock %}
{% endblock %}
